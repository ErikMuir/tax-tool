{
  "name": "tax-tool",
  "version": "0.1.0",
  "description": "A command-line tool for tracking income and expenses for 1099 employees to simplify tax filing.",
  "license": "ISC",
  "author": "Erik Muir",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "npm run build && node --test 'tests/**/*.test.ts'",
    "test:unit": "npm run build && node --test 'tests/config/*.test.ts'",
    "test:integration": "npm run build && node --test tests/index.test.ts",
    "test:watch": "node --test --watch 'tests/**/*.test.ts'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3"
  }
}
